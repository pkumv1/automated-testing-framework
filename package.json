  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "axios": "^1.3.4",
    "chalk": "^4.1.2",
    "commander": "^10.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lighthouse": "^10.0.0",
    "lodash": "^4.17.21",
    "winston": "^3.8.2",
    "yaml": "^2.2.1",
    "zap": "^1.0.0"
